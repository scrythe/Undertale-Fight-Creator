{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Schema",
  "definitions": {
    "Schema": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        },
        "attacks": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Attack"
          }
        }
      },
      "required": [
        "$schema",
        "attacks"
      ],
      "additionalProperties": false
    },
    "Attack": {
      "type": "object",
      "properties": {
        "speed": {
          "$ref": "#/definitions/Speed"
        },
        "end": {
          "type": "number"
        }
      },
      "required": [
        "speed",
        "end"
      ],
      "additionalProperties": false
    },
    "Speed": {
      "$ref": "#/definitions/Position"
    },
    "Position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    }
  }
}