{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["attacks"],
  "properties": {
    "$schema": {},
    "attacks": {
      "description": "All the Bone movements",
      "examples": [
        [
          { "speed": { "x": 0, "y": -2 }, "end": 50 },
          { "speed": { "x": 2, "y": 0 }, "end": 100 },
          { "speed": { "x": 0, "y": 2 }, "end": 150 },
          { "speed": { "x": -2, "y": 0 }, "end": 200 },
          { "speed": { "x": 2, "y": 0 }, "end": 250 },
          { "speed": { "x": -2, "y": 0 }, "end": 400 },
          { "speed": { "x": 2, "y": 0 }, "end": 500 }
        ]
      ],
      "type": "array",
      "items": { "$ref": "#/definitions/Attack" }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "Attack": {
      "examples": [{ "speed": { "x": 0, "y": -2 }, "end": 50 }],
      "type": "object",
      "description": "One single Bone Movement",
      "required": ["speed", "end"],
      "properties": {
        "speed": {
          "$ref": "#/definitions/Speed"
        },
        "end": {
          "description": "the time when the attack ends",
          "type": "number"
        }
      }
    },
    "Speed": {
      "type": "object",
      "description": "the Speed the bullet moves",
      "examples": [{ "x": 0, "y": -2 }],
      "required": ["x", "y"],
      "properties": {
        "x": { "description": "x speed", "examples": [0], "type": "number" },
        "y": { "description": "y speed", "examples": [-2], "type": "number" }
      }
    }
  }
}
